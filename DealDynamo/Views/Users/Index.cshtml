@model IEnumerable<DealDynamo.Areas.Identity.Data.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="mb-3">
    <form method="get" asp-action="Index" class="form d-flex align-items-center gap-3">
        <div class="form-group">
            <label class="form-label" for="searchString">Search by username</label>
            <br/>
            <input class="form-control" type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Search by name..." />
        </div>
        <div class="form-group">
            <label for="roleFilter">Filter by Role</label>
            <br/>
            <select name="roleFilter" class="form-control mr-2">
                <option value="">All Roles</option>
                <option value="Admin">Admin</option>
                <option value="Seller">Seller</option>
                <option value="Buyer">Buyer</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Filter</button>
    </form>
</div>

@if (Model.Any())
{
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success mb-3" style="width:auto">
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
                <p class="card-text">
                    Roles:
                    @if (user.IsAdmin)
                    {
                        <span class="badge badge-primary">Admin</span>
                    }
                    @if (user.IsSeller)
                    {
                        <span class="badge badge-secondary">Seller</span>
                    }
                    @if (user.IsBuyer)
                    {
                        <span class="badge badge-success">Buyer</span>
                    }
                </p>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Details" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body d-flex align-items-center">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="ms-2 btn btn-success" asp-area="Identity" asp-controller="Account" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}
