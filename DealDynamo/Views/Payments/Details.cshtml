@model DealDynamo.Models.Payments

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                Payment Details
            </h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PaymentDate)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Order)
                </dt>
                <dd class="col-sm-10">
                    <a href="#" class="view-order-link" data-order-id="@Model.Order?.Id">View Order</a>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.view-order-link').on('click', function (e) {
                e.preventDefault();
                var orderId = $(this).data('order-id');
                $.ajax({
                    url: '@Url.Action("GetOrderDetails", "Orders")',
                    type: 'GET',
                    data: { id: orderId },
                    success: function (data) {
                        $('#orderDetailsModal .modal-body').html(data);
                        $('#orderDetailsModal').modal('show');
                    },
                    error: function () {
                        alert('Error loading order details.');
                    }
                });
            });
        });
    </script>
}
