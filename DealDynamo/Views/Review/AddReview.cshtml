@model DealDynamo.Models.ProductReview

@{
    ViewData["Title"] = "Add Review";
}

<h1>Add Review</h1>

<h4>Product Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label" hidden></label>
                <input asp-for="ProductID" class ="form-control" hidden></input>

                <label class="control-label" readonly>Product Title</label>
                <input class="form-control" value="@Model.Product?.Title" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label" hidden></label>
                <input asp-for="UserId" class ="form-control" hidden></input>

                <label for="User Name" class="control-label" >User Name</label>
                <input class="form-control" readonly value="@Model.User?.UserName"></input>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSubmitted" class="control-label"></label>
                <input asp-for="DateSubmitted" class="form-control" readonly/>
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary mt-3">Add Review</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

