@model DealDynamo.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
       <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Category Detail</h3>
        </div>
        <div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input readonly class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea readonly cols="5" type="text" class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="text-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
