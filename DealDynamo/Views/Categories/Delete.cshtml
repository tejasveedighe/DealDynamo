@model DealDynamo.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-4">
       <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">Delete Category</h3>
        </div>
        <div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input readonly class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea readonly cols="5" type="text" class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <a class="btn btn-warning" asp-action="Edit">Edit</a> |
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="text-primary" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
